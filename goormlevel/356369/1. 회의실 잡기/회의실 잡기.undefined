#include <iostream>
#include <vector>
#include <algorithm>
#include <queue>
using namespace std;
int main() {

	int n;
	cin>>n;
	vector<pair<int,int>> vec(n);
	for(int i = 0;i<n;i++) cin>>vec[i].first>>vec[i].second;
	sort(vec.begin(),vec.end());

	priority_queue<int> pq;
	for(auto [s,e] : vec)
		{

			if(!pq.empty()&& -pq.top()<=s)
			{
				pq.pop();
			}
			pq.push(-e);
		}
	cout<<pq.size();
	return 0;
}