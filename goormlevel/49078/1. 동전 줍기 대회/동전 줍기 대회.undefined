#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
long long dp[1000001];
int main() 
{
	int n;
	cin>>n;
	vector<int> arr(n+1);
	for(int i = 1;i<=n;i++)cin>>arr[i];
	// dp[1] = arr[i];
	// dp[2] = dp[1] + arr[2], dp[1]
	// dp[3] = dp[2] + arr[3], dp[2]
	for(int i = 1;i<=n;i++)
		{
			dp[i] = max(dp[i-1] + arr[i],dp[i]);
		}
	long long ans = *max_element(dp,dp+n+1);
	cout<<ans;
	return 0;
}